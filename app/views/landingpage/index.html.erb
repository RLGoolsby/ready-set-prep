<link href='https://fonts.googleapis.com/css?family=Lato:400,400italic,700' rel='stylesheet' type='text/css'>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">

<% if current_user %>
  <div class="searchform">
    <%= form_tag('/interview', method: :post) %>
       <p class="positions">Company<br></p>
       <input type="text" name="q">

<!---   POSTIONS DROPDOWN PANEL -->

    <div class="positions">Click to select a Position</div>

    <%= render partial: "/shared/dropdownmenu" %>

    <button type="submit" value="Submit">Prep!</button>

  </div><!--  end of searchform  -->
  <% @reviews.each do |f| %>
  <%= button_to "#{f.position}, #{f.company}", {:controller => "interview", :action => "create", :positions => f.position, :q=> f.company} , :method=>:post  %>
  <%= button_to 'x', {:controller => "savedinterviews", :id => f.id, :action => "destroy" }, {:method => :delete} %>
  <% end %>

<% else %>
  <!--Login Page  -->
  <%= image_tag("maintitle.png", class:"maintitle") %>

  <a><%= link_to "Sign Up", new_user_registration_path, :method => :get, class:"signup" %></a>
  <a><%= link_to "Log In",user_session_path, :method => :get, class:"login" %></a>



  <% end %>
